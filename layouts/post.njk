{% extends "layouts/layout.njk" %}

{% block content %}
<div class="post">
  <div class="post-header">
    <img class="post-featured-image" src="{{ image }}"/>

    {% if title %}
    <div class="post-title">
      <h1>{{ title }}</h1>
    </div>
    {% endif %}
  </div>

  <div class="post-contents">
    {{ contents | safe }}
  </div>
</div>
{% endblock %}